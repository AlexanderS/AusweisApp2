IF(ANDROID)
	FUNCTION(READ_REVISION _var _regex _file)
		IF(EXISTS "${_file}")
			FILE(READ "${_file}" content)
			STRING(REGEX MATCH "${_regex}" _unused "${content}")
			SET(${_var} ${CMAKE_MATCH_1} PARENT_SCOPE)
		ENDIF()
	ENDFUNCTION()

